{
  "name": "autoscale-core",
  "version": "3.1.0-alpha.0",
  "description": "Fortinet Autoscale Project Core module.",
  "main": "index.js",
  "scripts": {
    "copy-package-files": "cp package.json ./compiled && cp LICENSE ./compiled && cp README.md ./compiled",
    "make-dist": "(mkdir -p ./dist && cd ./compiled && npm pack | xargs -I{} cp ./{} ../dist/)",
    "ts-compile": "rm -rf ./compiled && node node_modules/typescript/bin/tsc",
    "build": "npm install && npm run ts-compile && npm run copy-package-files && npm run make-dist",
    "test": "nyc mocha './{,!(node_modules|dist|scripts)/**/}test/mocha*/*.js'",
    "check": "node node_modules/ftnt-devops-ci/bin/ftnt-devops-ci.js c  -fl -F .prettierignore -L .eslintignore \"{*,**/*}{.js,.json,.ts}\"",
    "fix": "node node_modules/ftnt-devops-ci/bin/ftnt-devops-ci.js f  -fl -F .prettierignore -L .eslintignore \"{*,**/*}{.js,.json,.ts}\"",
    "pre-commit": "npm audit && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fortinet/autoscale-core"
  },
  "author": "Fortinet <github@fortinet.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fortinet/autoscale-core/issues"
  },
  "homepage": "https://github.com/fortinet/autoscale-core#readme",
  "dependencies": {
    "http-status-codes": "^1.3.2"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.10",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-prettier": "^3.1.2",
    "ftnt-devops-ci": "github:fortinet/ftnt-devops-ci",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "request": "^2.87.0",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "http-status-codes": "^1.3.2"
  }
}
